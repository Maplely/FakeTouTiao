<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="40dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/micro_hot_item_iv"
        android:scaleType="centerCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <View
        android:id="@+id/micro_hot_item_stub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/micro_hot_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_000000"
        android:layout_alignBottom="@id/micro_hot_item_stub"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/micro_hot_item_iv"/>

    <com.ruffian.library.RTextView
        android:id="@+id/micro_hot_item_des"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textSize="10sp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/micro_hot_item_stub"
        android:layout_toRightOf="@id/micro_hot_item_iv"
        />
</RelativeLayout>