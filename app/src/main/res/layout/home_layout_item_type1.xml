<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/home_news_type1_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.3"
        android:paddingRight="12dp"
        android:text="ojwojojo欧文宏观经济阿卡贫困解耦我奇偶积极"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/home_news_type1_flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_news_type1_title_tv"
        android:layout_marginTop="5dp"
        android:background="@drawable/home_layout_item_text_bg"
        android:text="置顶"
        android:textColor="@color/color_F8EB4248"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/home_news_type1_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_news_type1_flag_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/home_news_type1_flag_tv"
        android:text="央视网新闻"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/home_news_type1_comment_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_news_type1_source_tv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/home_news_type1_source_tv"
        android:text="0评论"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/home_news_type1_time_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_news_type1_comment_nums"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/home_news_type1_comment_nums"
        android:text="13分钟前"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/home_news_type1_nocare_chahao"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/home_news_type1_time_nums"
        android:layout_alignRight="@+id/home_news_type1_title_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/home_layout_item_nocare"
        android:src="@drawable/home_jd_browser_close" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_news_type1_title_tv"
        android:background="@color/color_595858" />
</RelativeLayout>