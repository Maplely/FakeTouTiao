<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/color_aaa9a9"/>
    <TextView
        android:id="@+id/tv_home_refresh_data_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:text="今日推荐3条更新数据"
        android:textColor="@color/color_3F51B5"
        android:background="@color/color_b3bce8"
        android:gravity="center_horizontal"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_home_refresh_data_nums">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_recommend_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>